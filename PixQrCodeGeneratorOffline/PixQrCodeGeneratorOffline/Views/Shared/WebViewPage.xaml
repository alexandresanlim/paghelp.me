<?xml version="1.0" encoding="utf-8" ?>
<share:ContentPageWithNavBar xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PixQrCodeGeneratorOffline.Views.Shared.WebViewPage"
             xmlns:share="clr-namespace:PixQrCodeGeneratorOffline.Views.Shared"
             >
    
    <ContentPage.Content>
        <Grid RowDefinitions="*, auto" RowSpacing="0">
            <WebView Grid.Row="0" x:Name="Wv" Source="{Binding CurrentUri}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
            <share:AdsView Grid.Row="1" />
        </Grid>
    </ContentPage.Content>
</share:ContentPageWithNavBar>