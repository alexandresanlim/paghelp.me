                        </Frame>
                    </StackLayout>

                    <StackLayout>
                        <Label Text="Gostando do PIX APP?" Style="{StaticResource titleStyle}" />
                        <Frame Style="{StaticResource styleFrameMenuAbout}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenStoreCommand}" />
                            </Frame.GestureRecognizers>
                            <StackLayout Orientation="Horizontal" Spacing="10">
                                <controls:CustomIcon Glyph="{Binding CurrentStoreIcon}" IconType="brand" IconColor="{DynamicResource textOnSecondary}" />
