                    <controls:CustomLabel Text="Salvar" TextColor="{Binding CurrenStyle.TextOnPrimary}" FontAttributes="Bold" />
                </StackLayout>
            </StackLayout>-->

            <!--<StackLayout Grid.Row="1" Padding="15">
                <controls:CustomLabel Text="IMPORTANTE" FontAttributes="Bold" TextColor="{Binding CurrenStyle.TextOnPrimary}" />

                <controls:CustomCarouselView
                                IndicatorView="indicatorView"
                                ItemsSource="{Binding Notices}"
                                IsScrollAnimated="True"
                                Loop="False"
                                >

                    <controls:CustomCarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Padding="5,0">
                                <Frame BackgroundColor="#30000000" Padding="15" CornerRadius="5">
