<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PixQrCodeGeneratorOffline.App"
             xmlns:converterResources="clr-namespace:PixQrCodeGeneratorOffline.Converters.Resources"
             xmlns:styleResorces="clr-namespace:PixQrCodeGeneratorOffline.Style.Resources"
             xmlns:controlsResorces="clr-namespace:PixQrCodeGeneratorOffline.Controls.Resources">
    <!--
        Define global resources and styles here, that apply to all pages in your app.
    -->
    <Application.Resources>

        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <converterResources:ConverterResource />
                <styleResorces:ColorsResource />
                <styleResorces:FontSizeResource />
                <styleResorces:FontTypeResource />
                <controlsResorces:XFControlsResource />
                <controlsResorces:XFCustomControlResource />
                <controlsResorces:StyleControlResource />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>
</Application>
