<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="PixQrCodeGeneratorOffline.Templates.Key.HorizontalKeys"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PixQrCodeGeneratorOffline.Controls"
    xmlns:icons="clr-namespace:PixQrCodeGeneratorOffline.Helpers.Icon"
    xmlns:key="clr-namespace:PixQrCodeGeneratorOffline.Templates.Key"
    xmlns:qr="clr-namespace:Xam.Forms;assembly=Xam.Forms.QRCode"
    Padding="0,0,8,0"
    x:DataType="key:HorizontalKeys">

    <StackLayout.Resources>
        <ResourceDictionary>
            <Style x:Key="styleActionText" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
                <Setter Property="TextColor" Value="{DynamicResource textPrimary}" />
                <Setter Property="FontFamily" Value="{StaticResource FontSemiBold}" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            </Style>

            <Style x:Key="styleActionIcon" TargetType="controls:CustomIcon">
                <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
                <Setter Property="TextColor" Value="{DynamicResource textPrimary}" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
            </Style>
        </ResourceDictionary>
    </StackLayout.Resources>

    <Frame
        x:Name="xMainFrame"
        Padding="12"
        CornerRadius="10">
        <Grid ColumnDefinitions="auto,*">

            <BoxView
                x:Name="xBoxView"
                Grid.Column="0"
                BackgroundColor="{DynamicResource primaryDark}"
                CornerRadius="15"
                WidthRequest="8" />

            <Grid
                Grid.Column="1"
                Padding="8,16"
                ColumnDefinitions="80,*"
                ColumnSpacing="16">

                <qr:QRCode
                    x:Name="xQrCode"
                    Grid.Column="0"
                    Content="QrCodeContent"
                    HeightRequest="80"
                    VerticalOptions="Center"
                    WidthRequest="80" />

                <StackLayout Grid.Column="1" Padding="0,4">
                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalOptions="EndAndExpand">
                        <controls:CustomIcon
                            x:Name="xIconInstitution"
                            FontSize="{StaticResource FontSizeLarge}"
                            IconType="FonteBancosBrasileiros"
                            Style="{DynamicResource styleActionIcon}" />

                        <Label
                            x:Name="xInstitutionValue"
                            FontSize="{StaticResource FontSizeMedium}"
                            Style="{DynamicResource styleActionText}"
                            Text="InstitutionName"
                            VerticalOptions="CenterAndExpand" />
                    </StackLayout>

                    <StackLayout
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalOptions="EndAndExpand">
                        <controls:CustomIcon
                            x:Name="xIconKey"
                            FontSize="{StaticResource FontSizeMicro}"
                            Glyph="{x:Static icons:FontAwesomeSolid.Key}"
                            IsVisible="False"
                            Style="{DynamicResource styleActionIcon}" />

                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                            <Label
                                x:Name="xKeyValue"
                                FontSize="{StaticResource FontSizeSmall}"
                                LineBreakMode="MiddleTruncation"
                                MaxLines="1"
                                Text="Key" />

                            <StackLayout
                                x:Name="xHidePanel"
                                HorizontalOptions="FillAndExpand"
                                IsVisible="False" />
                        </Grid>
                    </StackLayout>


                </StackLayout>



            </Grid>

        </Grid>
    </Frame>

</StackLayout>