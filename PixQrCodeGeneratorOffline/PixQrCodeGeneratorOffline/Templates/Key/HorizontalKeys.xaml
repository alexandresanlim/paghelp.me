<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="PixQrCodeGeneratorOffline.Templates.Key.HorizontalKeys"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PixQrCodeGeneratorOffline.Controls"
    xmlns:icons="clr-namespace:PixQrCodeGeneratorOffline.Helpers.Icon"
    xmlns:key="clr-namespace:PixQrCodeGeneratorOffline.Templates.Key"
    xmlns:qr="clr-namespace:Xam.Forms;assembly=Xam.Forms.QRCode"
    Padding="0,0,8,0"
    x:DataType="key:HorizontalKeys">

    <StackLayout.Resources>
        <ResourceDictionary>
            <Style x:Key="styleActionText" TargetType="Label">
                <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}" />
                <Setter Property="TextColor" Value="{DynamicResource textPrimary}" />
                <Setter Property="FontFamily" Value="{DynamicResource FontSemiBold}" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
            </Style>

            <Style x:Key="styleActionIcon" TargetType="controls:CustomIcon">
                <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}" />
                <Setter Property="TextColor" Value="{DynamicResource textPrimary}" />
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
            </Style>
        </ResourceDictionary>
    </StackLayout.Resources>

    <Frame
        x:Name="xMainFrame"
        Padding="15"
        CornerRadius="10">
        <Grid ColumnDefinitions="auto,*">

            <BoxView
                x:Name="xBoxView"
                Grid.Column="0"
                BackgroundColor="{DynamicResource primaryDark}"
                CornerRadius="15"
                WidthRequest="8" />

            <StackLayout
                Grid.Column="1"
                Padding="10,15"
                Spacing="15">


                <Grid ColumnDefinitions="auto,*" ColumnSpacing="15">

                    <qr:QRCode
                        x:Name="xQrCode"
                        Grid.Column="0"
                        BackgroundColor="White"
                        Content="QrCodeContent"
                        HeightRequest="80"
                        Level="H"
                        VerticalOptions="Center"
                        WidthRequest="80"
                        Color="#000000" />

                    <Grid
                        Grid.Column="1"
                        ColumnDefinitions="auto, *"
                        RowDefinitions="auto, auto"
                        RowSpacing="0"
                        VerticalOptions="Center">

                        <controls:CustomIcon
                            x:Name="xIconInstitution"
                            Grid.Row="0"
                            Grid.Column="0"
                            Glyph="{x:Static icons:FontAwesomeSolid.University}"
                            Style="{DynamicResource styleActionIcon}" />

                        <Label
                            x:Name="xInstitutionValue"
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{DynamicResource styleActionText}"
                            Text="InstitutionName" />

                        <controls:CustomIcon
                            x:Name="xIconKey"
                            Grid.Row="1"
                            Grid.Column="0"
                            Glyph="{x:Static icons:FontAwesomeSolid.Key}"
                            Style="{DynamicResource styleActionIcon}" />


                        <Label
                            x:Name="xKeyValue"
                            Grid.Row="1"
                            Grid.Column="1"
                            LineBreakMode="MiddleTruncation"
                            MaxLines="1"
                            Style="{DynamicResource styleActionText}"
                            Text="Key" />

                        <!--<StackLayout
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    BackgroundColor="Red"
                                                    HorizontalOptions="FillAndExpand"
                                                    IsVisible="{Binding Viewer.IsHideValue}" />-->



                    </Grid>

                    <!--<StackLayout Grid.Column="2" Padding="30,5,0,15" VerticalOptions="Start">
                                                        <StackLayout.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Command.EditKeyCommand}" />
                                                        </StackLayout.GestureRecognizers>

                                                        <controls:CustomIcon Glyph="{x:Static icons:FontAwesomeSolid.Edit }" IconColor="{DynamicResource textSecondary}"/>

                                                        <Label Text="Editar" Style="{DynamicResource styleTextOnButtonActionList}" TextColor="{DynamicResource textSecondary}"/>
                                                    </StackLayout>-->

                </Grid>


            </StackLayout>
        </Grid>
    </Frame>

</StackLayout>