<?xml version="1.0" encoding="utf-8" ?>
<StackLayout
    x:Class="PixQrCodeGeneratorOffline.Templates.Preferences.PreferencePanelTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:PixQrCodeGeneratorOffline.Controls"
    Padding="15"
    Spacing="15">

    <controls:CustomIcon
        x:Name="xIcon"
        FontSize="{DynamicResource FontSizeMedium}"
        HorizontalOptions="Start"
        IconColor="{DynamicResource textPrimary}" />

    <Label
        x:Name="xTitle"
        FontFamily="{DynamicResource FontBold}"
        FontSize="{DynamicResource FontSizeMedium}"
        TextColor="{DynamicResource textPrimary}" />

    <Label x:Name="xDescription" TextColor="{DynamicResource textSecondary}" />

</StackLayout>